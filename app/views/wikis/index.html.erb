<h1>Listing Wikis</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wikis.each do |wiki| %>
      <tr>
        <td><%= link_to wiki.title, wiki_path(wiki) %></td>
        <td><%= link_to wiki.user.email, user_path(wiki.user) %></td>

        <!-- TODO allow edit and destroy from index for authorized users -->
        <!-- <td><%= link_to 'Edit', edit_wiki_path(wiki) %></td> -->
        <!-- <td><%= link_to 'Destroy', wiki, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

