<!DOCTYPE html>
<html>
  <head>
    <!-- TODO active/inactive states for all links http://getbootstrap.com/components/#disabled-and-active-states -->
    <!-- TODO Set up favicon? -->
    <!-- TODO use cooler fonts? -->
    <title>Wikease</title>
    <meta content="width=device-width, initial-scale=1" name="viewport">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <!-- TODO Ajax top navigation? -->
    <!-- TODO add breadcrumbs? http://getbootstrap.com/components/#breadcrumbs -->
    <div class="container">
      <!-- TODO make active page highlight -->
      <ul class="nav nav-pills">
        <li role="presentation"  class="blue-pill"> <%= link_to "Home", welcome_index_path %> </li>
        <li role="presentation"  class="blue-pill"> <%= link_to "About", welcome_about_path %> </li>
        <li role="presentation"  class="blue-pill"> <%= link_to "Users", users_path %> </li>
        <li role="presentation"  class="blue-pill"> <%= link_to "Wikis", wikis_path %> </li>
        <li role="presentation"  class="pull-right new-wiki-button" id="new_wiki_button"> <%= link_to 'Create New Wiki', new_wiki_path %> </li>
        <!-- TODO upgrade to premium here? -->
      </ul>

      <!-- IDEA allow sign in then return to previous page -->
      <div class="pull-right user-info">
        <% if user_signed_in? %>
        <!-- TODO Add username attribute, change this line -->
          <!-- <strong><%# current_user.email %></strong> -->
          <strong><%= link_to current_user.email, user_path(current_user) %></strong>
          </br>
          <%= link_to 'Settings', edit_user_registration_path, class: "navbar-link" %>
           - <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'navbar-link' %>
        <% else %>
          <%= link_to "Sign Up", new_user_registration_path, class: "navbar-link" %>
           - <%= link_to "Sign In", new_user_session_path, class: 'navbar-link' %>
        <% end %>
      </div>
      <div class="clearfix bump-down"></div>


      <!-- TODO style these to remove excess padding/look better -->
      <div class="flash">
      <% if flash[:notice] %>
        <div class= "alert alert-succes">
          <button type="button" class=close data-dismiss="alert">&times;</button>
          <%= flash[:notice] %>
        </div>
      <% elsif flash[:error] %>
        <div class= "alert alert-danger"
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:error] %>
        </div>
      <% elsif flash[:alert] %>
        <div class= "alert alert-warning">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:alert] %>
        </div>
      <% end %>
      </div>

    <%= yield %>
  </div>
  </body>
</html>
